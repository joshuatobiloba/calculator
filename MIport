    <!-- JavaScript for Interactivity and Gemini API -->
    <script>
        // --- Gemini API Configuration ---
        const apiKey = ""; // API Key is automatically handled by the environment if empty
        const apiUrl = "https://generativelanguage.googleapis.com/v1beta/models/gemini-2.5-flash-preview-05-20:generateContent?key=" + apiKey;

        // Utility function for exponential backoff
        async function callGeminiApi(payload, maxRetries = 3) {
            for (let i = 0; i < maxRetries; i++) {
                try {
                    const response = await fetch(apiUrl, {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify(payload)
                    });

                    if (response.status === 429 && i < maxRetries - 1) {
                        const delay = Math.pow(2, i) * 1000;
                        await new Promise(resolve => setTimeout(resolve, delay));
                        continue; // Retry
                    }

                    if (!response.ok) {
                        const errorBody = await response.json();
                        console.error("API Error Details:", errorBody);
                        throw new Error(`HTTP error! status: ${response.status}`);
                    }
                    
                    const result = await response.json();
                    const text = result.candidates?.[0]?.content?.parts?.[0]?.text;
                    
                    if (text) {
                        return text;
                    } else {
                        console.error("Gemini response structure invalid or empty.");
                        throw new Error("Invalid response from API.");
                    }
                } catch (error) {
                    console.error("Error during Gemini API call attempt " + (i + 1) + ":", error);
                    if (i === maxRetries - 1) throw error; // Re-throw on last attempt
                }
            }
        }

        // --- LLM Feature: Refine Project Brief (Contact Section) ---
        const detailsTextarea = document.getElementById('details');
        const summarizeBtn = document.getElementById('summarize-btn');
        const summarizeText = document.getElementById('summarize-text');
        const summarizeLoading = document.getElementById('summarize-loading');
        const detailsError = document.getElementById('details-error');

        summarizeBtn.addEventListener('click', summarizeBrief);

        async function summarizeBrief() {
            const userPrompt = detailsTextarea.value.trim();

            if (userPrompt.length < 50) {
                detailsError.textContent = "Please enter at least 50 characters of project details before refining.";
                detailsError.classList.remove('hidden');
                setTimeout(() => detailsError.classList.add('hidden'), 5000);
                return;
            }

            // Show loading state
            summarizeBtn.disabled = true;
            summarizeText.textContent = 'Refining...';
            summarizeLoading.classList.remove('hidden');
            detailsError.classList.add('hidden');

            const systemPrompt = `Act as a world-class Project Management Consultant. Take the following client request and turn it into a concise, actionable, and professionally formatted 3-point summary (using a numbered list, NOT markdown lists). The three points MUST cover: 1) Core Project Goal (What is the ultimate objective?), 2) Service Scope (Which services from Web Dev, UI/UX Design, Graphics, 3D Animation, Logo Design, Business Boosting are most relevant?), and 3) Next Steps (What is the immediate action needed?). The entire response should be under 150 words.`;

            const payload = {
                contents: [{ parts: [{ text: userPrompt }] }],
                systemInstruction: { parts: [{ text: systemPrompt }] },
            };

            try {
                const refinedBrief = await callGeminiApi(payload);
                
                if (refinedBrief) {
                    detailsTextarea.value = refinedBrief;
                } else {
                     detailsError.textContent = "Error: Could not generate a summary. Please try again.";
                     detailsError.classList.remove('hidden');
                }

            } catch (error) {
                console.error("Failed to summarize brief:", error);
                detailsError.textContent = "Network error or API limit reached. Please try again in a moment.";
                detailsError.classList.remove('hidden');
            } finally {
                // Reset loading state
                summarizeBtn.disabled = false;
                summarizeText.textContent = '✨ Refine Project Brief';
                summarizeLoading.classList.add('hidden');
            }
        }

        // --- Contact Form Handling (MAILTO IMPLEMENTATION) ---
        const RECIPIENT_EMAIL = "oluwatobilobajoshua906@gmail.com";
        
        document.getElementById('contact-form').addEventListener('submit', function(e) {
            e.preventDefault();
            const messageBox = document.getElementById('message-box');

            // 1. Get user input
            const name = document.getElementById('name').value;
            const email = document.getElementById('email').value;
            const details = document.getElementById('details').value;

            // 2. Construct email content
            const subject = `New Project Inquiry: ${name} (${email})`;
            const bodyContent = `Client Name: ${name}\nClient Email: ${email}\n\nProject Details:\n${details}\n\n--- Sent from Elite Digital Studio contact form.`;

            // 3. Encode and construct mailto link
            const mailtoLink = `mailto:${RECIPIENT_EMAIL}?subject=${encodeURIComponent(subject)}&body=${encodeURIComponent(bodyContent)}`;

            // 4. Update message box for user guidance
            messageBox.textContent = 'Opening your email client... Please check your email client (like Gmail) to complete and send the message!';
            messageBox.classList.remove('hidden');
            
            // 5. Trigger the mailto link
            window.location.href = mailtoLink;
            
            // Hide message after a delay
            setTimeout(() => {
                messageBox.classList.add('hidden');
            }, 8000);
        });

        // --- Existing Interactivity JavaScript ---
        
        // 1. Mobile Menu Toggle
        document.getElementById('hamburger').addEventListener('click', function() {
            const menu = document.getElementById('mobile-menu');
            const icon = this.querySelector('svg');
            menu.classList.toggle('hidden');
            
            // Toggle hamburger/close icon (optional, but good UX)
            if (menu.classList.contains('hidden')) {
                // Show hamburger
                icon.innerHTML = '<line x1="3" y1="12" x2="21" y2="12"></line><line x1="3" y1="6" x2="21" y2="6"></line><line x1="3" y1="18" x2="21" y2="18"></line>';
            } else {
                // Show close (X) icon
                icon.innerHTML = '<line x1="18" y1="6" x2="6" y2="18"></line><line x1="6" y1="6" x2="18" y2="18"></line>';
            }
        });

        // Close mobile menu when a link is clicked
        document.querySelectorAll('#mobile-menu a').forEach(link => {
            link.addEventListener('click', () => {
                document.getElementById('mobile-menu').classList.add('hidden');
                // Reset icon to hamburger
                const icon = document.getElementById('hamburger').querySelector('svg');
                icon.innerHTML = '<line x1="3" y1="12" x2="21" y2="12"></line><line x1="3" y1="6" x2="21" y2="6"></line><line x1="3" y1="18" x2="21" y2="18"></line>';
            });
        });
    </script>
</body>
